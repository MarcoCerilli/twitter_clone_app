{% extends 'base.html.twig' %}
{% import 'macros.html.twig' as macros %}

{% block title %}Aggiungi commento
{% endblock %}

{% block body %}
	<div class="container my-5">
		{{ macros.breadcrumbs(breadcrumbs) }}
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="h3 mb-3 text-center">Aggiungi un commento</h1>

				{# Aggiunge p-4 per il padding, border rounded shadow per lo stile e bg-dark per lo sfondo #}
				{{ form_start(form, {'attr': {'class': 'p-4 border rounded shadow-sm bg-dark'}}) }}

				{# Etichetta del campo testo del commento #}
				<div class="mb-3">
					{{ form_label(form.text, 'Testo del commento', {'label_attr': {'class': 'form-label text-white'}}) }}
					{{ form_widget(form.text, {'attr': {'class': 'form-control', 'placeholder': 'Scrivi il tuo commento qui...'}}) }}
				</div>
				{# Campo del post - nascosto o non necessario se il post è già nel contesto #}
				{% if form.post is defined %}
					<div class="mb-3 d-none">
						{{ form_row(form.post) }}
					</div>
				{% endif %}

				{# Pulsante di invio #}
				<div class="d-flex justify-content-center">
					<button type="submit" class="btn btn-primary w-100 mt-4">Aggiungi</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
