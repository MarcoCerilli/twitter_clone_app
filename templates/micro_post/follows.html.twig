{% extends 'base.html.twig' %}
{% import 'macros.html.twig' as macros %}

{% block title %}Post delle persone che segui{% endblock %}

{% block body %}
    {# Manteniamo la barra in alto con breadcrumbs e pulsante "Nuovo Post" #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            {{ macros.breadcrumbs(breadcrumbs) }}
        </div>
        <div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.isVerified %}
                <a href="{{ path('app_micro_post_add') }}" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i>
                    Nuovo Post
                </a>
            {% endif %}
        </div>
    </div>

    <div class="container my-5">
        <h1 class="text-center mb-5">Post delle persone che segui</h1>
        
        {# ✅ Qui includiamo il nostro nuovo template riutilizzabile! #}
        {% include 'micro_post/_post_list.html.twig' with {
            posts: posts,
            empty_message: 'Questa sezione è vuota. Inizia a seguire qualcuno per vedere i suoi post qui!'
        } %}
    </div>
{% endblock %}