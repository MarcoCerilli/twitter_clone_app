{% if posts is not empty %}
    <div class="row">
        {% for post in posts %}
            <div class="col-md-6 mb-4">
                {% include 'micro_post/_post.html.twig' with {post: post} %}
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="card card-body text-center shadow-sm">
        {# Usiamo un messaggio personalizzabile che riceveremo dal template genitore #}
        <p class="text-secondary mb-0">{{ empty_message|default('Nessun post da visualizzare.') }}</p>
    </div>
{% endif %}