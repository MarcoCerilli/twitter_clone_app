{% extends 'base.html.twig' %}
{% import 'macros.html.twig' as macros %}

{% block title %}Accedi{% endblock %}

{% block body %}
<div class="container">
    <div class="form-container text-white">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Sei gi√† loggato come {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Accedi</h1>

            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            {# Aggiunto il form-check di Bootstrap per la checkbox #}
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me">
                <label class="form-check-label" for="remember_me">
                    Ricordami
                </label>
            </div>

            <button class="btn btn-primary w-100" type="submit">
                Accedi
            </button>
        </form>
    </div>
</div>
{% endblock %}