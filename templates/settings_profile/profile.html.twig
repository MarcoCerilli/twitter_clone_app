{# templates/settings_profile/profile.html.twig (versione corretta) #}

{% extends 'base.html.twig' %}

{% block title %}Impostazioni Profilo{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-5">Impostazioni del Profilo</h1>

        {# Creiamo una riga per contenere le due colonne #}
        <div class="row">
            {# --- COLONNA 1: FORM DATI TESTUALI --- #}
            <div class="col-md-6 mb-4">
                <div class="card bg-dark text-white h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3">I tuoi dati</h5>
                        {# Il tuo partial _profile_form.html.twig va qui dentro #}
                        {% include 'settings_profile/_profile_form.html.twig' with {form: form} %}
                    </div>
                </div>
            </div>

            {# --- COLONNA 2: FORM IMMAGINE PROFILO --- #}
            <div class="col-md-6 mb-4">
                <div class="card bg-dark text-white h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Immagine Profilo</h5>
                        {# Qui renderizziamo il nostro nuovo form per l'immagine #}
                        {{ form(imageForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}